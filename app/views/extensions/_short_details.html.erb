<div id='extension'>
  
 <div class="column span-24">
   <h3>
     <%= link_to extension.name, extension_path(extension), :style => "float:left;" %>
     <% if extension.search_percent.present? %>
       <span style="font-weight: normal; float: right">[Match strength: <%= extension.search_percent %>%]</span>
     <% end %>
     <div class="clear"></div>
   </h3>  
 </div>

  <div class="column span-11 append-1">
    <p><%= h(extension.summary) %></p>
  </div>

  <div class="column span-12 last">  
    by <%= link_to extension.author.name, user_path(extension.author) %><br/>
    URL: <%= link_to extension.website, extension.website %><br/>
    SCM: <%= link_to extension.scm_location, extension.scm_location %><br/>
    <span class='last_commit'>Last updated: 23 January, 19:34</span>  
  </div>

</div>
